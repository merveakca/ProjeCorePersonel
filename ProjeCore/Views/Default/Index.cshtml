@using ProjeCore.Models
@model List<Birim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BirimID</td>
            <td>@x.BirimAd</td>
            <td><a href="/Default/BirimSil/@x.BirimID" class="btn btn-danger">Sil</td>
            <td><a href="/Default/BirimGetir/@x.BirimID" class="btn btn-success">Güncelle</td>
            <td><a href="/Default/BirimDetay/@x.BirimID" class="btn btn-default" style="background-color:#ff6a00">Detaylar</td>
        </tr>
    }

</table>
<a href="/Default/YeniBirim/" class="btn btn-primary">Yeni Birim</a>


